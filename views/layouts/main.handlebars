<html lang='en'>

	<head>
		<meta charset='UTF-8' />
		<meta name='viewport' content='width=device-width, initial-scale=1.0' />
		<title>My Workout Tracker</title>

		<link rel='stylesheet' href='./css/normalize.css' />
		<link
			rel='stylesheet'
			href='https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css'
		/>
		<link rel='stylesheet' href='/css/style.css' />
	</head>

	<body>



		<div class="container-fluid sticky-top">
			<div class="row align-items-center bg-dark pt-4 pb-2 mb-5">
				<div class="col-sm-12 col-md-8 text-center">
					<h1><a href="/" class="link-light">My Workout Tracker</a></h1>
				</div>
				<div class="col-sm-12 col-md-4 text-center custom-nav">

					<a href="/profile" class="link-light">Profile</a>

					<!-- Conditionally render login or logout links -->

					{{#if logged_in}}
				
						<button class="link-light" id="logout-button">Logout</button>
		
        			{{/if}}
				</div>
			</div>
		</div> |
        
     
				</nav>
			</header>

			<main class='container container-fluid mt-5'>
				<!-- Render the sub layout -->
				{{{body}}}
			</main>
			<footer>

			</footer>
		</div>

		<!-- Render script for logged in users only -->
		{{#if logged_in}}
			<script src='/js/logout.js'></script>
  		{{/if}}
	</body>


</html>